class Restaurant {

  0..1 -- * Table tables;
  Integer numTables;
  1 -- 1 Menu;
}
  class Table
{
  * -- 1 Availability;
  1 -<@> * Seat seats;
  Integer tableNum;
  String location;
  Boolean isAvailable;
  Integer nbSeats;
}

class Seat
{
}

class Menu
{
  1 -- * MenuItem menuItems;
}

class MenuItem
{
  Integer price;
}

class Food
{
  isA MenuItem;
}

class Beverage
{
    isA MenuItem;

}

class Reservation
{
    Time time;
  Date date;
  Integer number;
}

class Availability
{
}

class AvailbableTable
{
  isA Availability;
}

class UsedTable
{
  isA Availability;
}
class Order
{
}

class Bill
{
  * -- * Order orders;
}

class Person
{
  * -- 1 Role;
  name;
  email;
  phoneNb;
  address;
}

class Waiter
{
  isA Role;
}

class Customer
{
  * -- 1 Table;
  1 -- 0..1 Reservation;
  * -- * Order orders;
  isA Role;
  
}

class Role
{
}